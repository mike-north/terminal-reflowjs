{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    /** Never ever change the following settings */
    "esModuleInterop": false,
    "skipLibCheck": false,
    "allowSyntheticDefaultImports": false
  },
  "include": ["src/**/*", "test/**/*", "eslint.config.mts"],
  "exclude": ["node_modules", "dist"]
}
