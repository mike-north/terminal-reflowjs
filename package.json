{
  "name": "terminal-reflowjs",
  "version": "0.0.0-alpha.0",
  "description": "ANSI-aware text reflow utilities for terminal output - word wrapping, truncation, padding, indentation, and more",
  "main": "dist/index.js",
  "types": "dist/terminal-reflow-public.d.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mike-north/terminal-reflowjs.git"
  },
  "homepage": "https://github.com/mike-north/terminal-reflowjs#readme",
  "bugs": {
    "url": "https://github.com/mike-north/terminal-reflowjs/issues"
  },
  "scripts": {
    "generate:api-report": "api-extractor run --local",
    "generate:docs": "api-documenter markdown --input temp --output docs",
    "check:api-report": "api-extractor run",
    "check:lint": "eslint .",
    "check:knip": "knip",
    "check:test-types": "tsc -P test/tsconfig.json",
    "check": "pnpm check:lint && pnpm check:knip && pnpm check:test-types",
    "build": "tsc --project tsconfig.build.json",
    "test": "vitest run",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "keywords": [
    "terminal",
    "ansi",
    "text",
    "wrap",
    "wordwrap",
    "truncate",
    "padding",
    "indent",
    "dedent",
    "reflow",
    "cli"
  ],
  "author": "Mike North",
  "license": "MIT",
  "packageManager": "pnpm@10.15.0",
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^9.39.1",
    "@microsoft/api-documenter": "^7.28.2",
    "@microsoft/api-extractor": "^7.55.2",
    "@types/node": "^24.10.2",
    "eslint": "^9.39.1",
    "jiti": "^2.6.1",
    "knip": "^5.73.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "string-width": "^8.1.0"
  }
}
